<div class="container mt-5">
    <div class="">
        <h1 class="mt-5 mb-3 text-center">Add Products</h1>
        <div class="mb-3">
            <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                <label for="exampleFormControlInput1" class="form-label">Name</label>
                <input type="text" class="form-control" name="itemName" id="exampleFormControlInput1"
                    placeholder="Name">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Price</label>
            <input type="number" class="form-control" name="price" id="exampleFormControlInput1" placeholder="Price">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">description</label>
            <input type="text" class="form-control" name="description" id="exampleFormControlInput1"
                placeholder="Description">
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Image</label>
            <input class="form-control" name="image" type="file" id="formFile">
        </div>
        <button type="submit" class="btn btn-primary mb-5">Submit</button>
        </form>
    </div>
</div>