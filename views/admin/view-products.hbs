               
 <section id="table" class="mt-5">
          <div class="container">


              <a class="btn btn-success float-end m-3" href="/admin/add-product">Add Product</a>


            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">description</th>
                  <th scope="col">Image</th>
                </tr>
              </thead>
              <tbody>
                {{#each product}}
                <tr>
                  <th scope="row">{{this.no}}</th>
                  <td>{{this.name}}</td>
                  <td>{{this.price}}</td>
                  <td>{{this.description}}</td>
                  <td><img style="width: 50px; height: 50px;" src="{{this.img}}" alt=""></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </section>